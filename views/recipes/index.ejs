<h2>Search Recipe</h2>
<form action="/recipes" method="GET">
    <div>
        <label>Name</label>
        <input type="text" name="title" value="<%= searchOptions.title %>">
    </div>
    <div>
        <label>Ingredients</label>
        <input type="text" id="addIngredient">
        <button type="button" id="addIngBtn" class="btn-primary"> <i class="fa-solid fa-circle-plus"></i> </button>
        <div class="listHolder">
            <ul class="list"></ul>
        </div>
        <input type="hidden" name="rawIng" id="rawIngID" value="<%= searchOptions.rawIng + "," %>">
    </div>
    <div>
        <label>Prep Time</label>
        <input type="number" min="0"  max="30" step="1" autocomplete="off" value="<%= searchOptions.days || 0 %>" name="days" id="time_days"   > d
        <input type="number" min="-1" max="24" step="1" autocomplete="off" value="<%= searchOptions.hours || 0 %>" name="hours" id="time_hours"  > h
        <input type="number" min="-1" max="60" step="1" autocomplete="off" value="<%= searchOptions.minutes || 0 %>" name="minutes" id="time_minutes"> m
    </div>
    <button type="submit">Search</button>
</form>
<br>
<div>
    <% recipes.forEach(recipe => { %>
        <div class="h-[200px] w-[200px] my-4 place-items-center bg-gradient-to-tl from-teal-500 to-blue-500 rounded-3xl inline-grid mx-3">
            <div
                class="group place-items-center relative cursor-pointer rounded-3xl items-center justify-center overflow-hidden transition-shadow hover:shadow-xl hover:shadow-black/60">
                <div class="h-[198px] w-[198px] place-items-center">
                    <a href="/recipes/<%= recipe.id %>">
                        <img height="200" width="200"
                            class="h-full w-full  rounded-3xl object-cover transition-transform duration-500 group-hover:rotate-3 group-hover:scale-125"
                            src="<%= recipe.foodImagePath %>" />
                        <div
                            class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black group-hover:from-black/70 group-hover:via-black/60 group-hover:to-black/70">
                        </div>
                        <div
                            class="absolute inset-0 flex translate-y-[46%] flex-col items-center justify-center px-9 text-center transition-all duration-500 group-hover:translate-y-0">
                            <h1 class="font-dmserif text-2xl font-bold text-white">
                                <%= recipe.title%>
                            </h1>
                            <h2 class="font-dmserif text-1xl font-bold text-white">
                                Prep Time: <% if (recipe.prepTime[0] === 0) { %> 
                                    <% if (recipe.prepTime[1] === 0) { %> 
                                        <%= recipe.prepTime[2] %>m
                                    <% } else { %>
                                        <% if (recipe.prepTime[0] == 0) { %> 
                                            <%= recipe.prepTime[1] %>h
                                        <% } else { %> 
                                            <%= recipe.prepTime[1] %>h <%= recipe.prepTime[2] %>m
                                        <% } %> 
                                    <% } %> 
                             
                                <% } else { %>
                                    <%= recipe.prepTime[0] %>d <%= recipe.prepTime[1] %>h <%= recipe.prepTime[2] %>m
                                <% } %> 
                            </h1>
                        </div>
                    </a>
                </div>
            </div>
        </div>   
    <% }) %>
</div>