<h2 class="header">
    Search Cuisines</h2>

<form action="/cuisines" method="GET" class="flex items-center w-72 pt-3 justify-center mx-auto">
    <label for="type" class="sr-only">Search</label>
    <div class="relative w-full">
        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor"
                viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                    d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                    clip-rule="evenodd"></path>
            </svg>
        </div>
        <input type="text" name="type"
            class="bg-primary-700 border-[1px] border-white text-white text-sm rounded-lg  block w-full pl-10 p-2.5  placeholder-gray-400 outline-none focus:ring-paragraph focus:border-paragraph"
            placeholder="Search" value="<%= searchOptions.type %>">
    </div>
    <button type="submit"
        class="p-2.5 ml-2 text-sm font-medium text-button-text bg-paragraph rounded-lg border border-headline focus:ring-4 focus:outline-none hover:bg-paragraph-600">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <span class="sr-only">Search</span>
    </button>
</form>

<% cuisines.forEach(cuisine=> { %>
    <span
        class="w-full max-w-sm p-4 border my-4 rounded-xl shadow sm:p-3 bg-primary-700 border-gray-700 mx-auto flex justify-center  ">
        <h5 class="py-3 mx-auto text-base font-semibold  md:text-lg text-white text-center">
            <%= cuisine.type %>
        </h5>
        <span class="inline-flex rounded-md shadow-sm mx-auto" role="group">
            <a href="/cuisines/<%= cuisine.id %>"
                class="px-4 py-4 text-sm font-medium bg-transparent border rounded-l-lg  focus:z-10 focus:ring-2 focus:ring-gray-500  focus:text-white border-white text-white hover:text-white hover:bg-paragraph-600 ">
                <i class="fa-solid fa-eye"></i>
                View
            </a>
            <a href="/cuisines/<%= cuisine.id %>/edit"
                class="px-4 py-4 text-sm font-medium bg-transparent border-t border-b focus:z-10 focus:ring-2 focus:ring-gray-500  focus:text-white border-white text-white hover:text-white hover:bg-button-600">
                <i class="fa-solid fa-pen-to-square"></i>
                Edit
            </a>
            <div
                class="px-4 py-4 text-sm font-medium bg-transparent border rounded-r-md focus:z-10 focus:ring-2 focus:ring-gray-500  focus:text-white border-white text-white hover:text-white hover:bg-rose-500 ">
                <i class="fa-solid fa-trash"></i>
                <%- include('../partials/deleteForm', { url: `/cuisines/${cuisine.id}` }) %>
            </div>
        </span>
    </span>
    <% }) %>