<% if (recipesInCuisine.length > 0) { %>
    <h2 class="text-2xl font-extrabold pl-3 pt-5 mb-2 text-center text-transparent bg-clip-text bg-gradient-to-r from-white to-slate-600"><%= cuisine.type %> Recipes</h2>
    <div class="flex justify-center">
        <% recipesInCuisine.forEach(recipe => { %>
            <<div class="h-[200px] w-[200px] my-4 place-items-center bg-gradient-to-tl from-teal-500 to-blue-500 rounded-3xl inline-grid mx-3">
                <div
                    class="group place-items-center relative cursor-pointer rounded-3xl items-center justify-center overflow-hidden transition-shadow hover:shadow-xl hover:shadow-black/60">
                    <div class="h-[198px] w-[198px] place-items-center">
                        <a href="/recipes/<%= recipe.id %>">
                            <img height="200" width="200"
                                class="h-full w-full  rounded-3xl object-cover transition-transform duration-500 group-hover:rotate-3 group-hover:scale-125"
                                src="<%= recipe.foodImagePath %>" />
                            <div
                                class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black group-hover:from-black/70 group-hover:via-black/60 group-hover:to-black/70">
                            </div>
                            <div
                                class="absolute inset-0 flex translate-y-[46%] flex-col items-center justify-center px-9 text-center transition-all duration-500 group-hover:translate-y-0">
                                <h1 class="font-dmserif text-2xl font-bold text-white">
                                    <%= recipe.title%>
                                </h1>
                                <h2 class="font-dmserif text-1xl font-bold text-white">
                                    Prep Time: <% if (recipe.prepTime[0] === 0) { %> 
                                        <% if (recipe.prepTime[1] === 0) { %> 
                                            <%= recipe.prepTime[2] %>m
                                        <% } else { %>
                                            <% if (recipe.prepTime[0] == 0) { %> 
                                                <%= recipe.prepTime[1] %>h
                                            <% } else { %> 
                                                <%= recipe.prepTime[1] %>h <%= recipe.prepTime[2] %>m
                                            <% } %> 
                                        <% } %> 
                                
                                    <% } else { %>
                                        <%= recipe.prepTime[0] %>d <%= recipe.prepTime[1] %>h <%= recipe.prepTime[2] %>m
                                    <% } %> 
                                </h1>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<% } %>

<span class="w-full max-w-xs p-4 mt-7 bg-white border my-3 border-gray-200 rounded-lg shadow sm:p-3 dark:bg-gray-800 dark:border-gray-700 mx-auto flex justify-center  ">
    <h5 class="py-3 mx-auto text-base font-semibold  md:text-lg text-white text-center">
        <%= cuisine.type %>
    </h5>
    <span class="inline-flex rounded-md shadow-sm mx-auto" role="group">
        <a href="/cuisines/<%= cuisine.id %>/edit" class="px-4 py-4 text-sm font-medium bg-transparent border <%= recipesInCuisine.length <= 0 ? "rounded-l-lg" : "rounded-lg"%>  focus:z-10 focus:ring-2 focus:ring-gray-500  focus:text-white border-white text-white hover:text-white hover:bg-amber-400 ">
            <i class="fa-solid fa-pen-to-square"></i>
            Edit
        </a>
        <% if (recipesInCuisine.length <= 0) { %>
            <div class="px-4 py-4 text-sm font-medium bg-transparent border rounded-r-md focus:z-10 focus:ring-2 focus:ring-gray-500  focus:text-white border-white text-white hover:text-white hover:bg-red-500 " >
                <i class="fa-solid fa-trash"></i>
                <%- include('../partials/deleteForm', { url: `/cuisines/${cuisine.id}` }) %>
            </div>  
        <% } %> 
    </span>
</span> 